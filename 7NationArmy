use_bpm 120
use_synth :piano
use_synth_defaults sustain: 0.25
play_notes = [:e3, :e3, :g3, :e3, :r, :d3, :c3,:b2]
play_sleep = [1.5, 0.5, 0.75, 0.25, 0.5, 0.5, 2, 2,]
live_loop :white_stripes do
  x=0
  8.times do
    play play_notes [x]
    sleep play_sleep [x]
    x= x + 1
  end
end

x= 0.1
live_loop :drums do
  sample :drum_heavy_kick
  sleep 1
  sample :drum_heavy_kick
  sleep 1
  sample :drum_snare_hard
  sleep 2
end

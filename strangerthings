# Stranger Things Main Theme
# NOTE: Each measure's total sleep adds up to 4 because the time signature is 4/4
use_bpm 160
use_synth :saw
stranger_things = [:c2,:e2,:g2,:b2,:c3,:e2,:g2,:b2] # an array is a list of values


# Second set of eigth notes
loop do
  index = 0
  8.times do
    play stranger_things[index]
    sleep 0.5
    index = index + 1
  end
end
